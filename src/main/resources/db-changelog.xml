<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="cjstehno">
        <createTable tableName="user_messages">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="message_type" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="read" type="boolean" defaultValueBoolean="false" />
            <column name="title" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="content" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- spring security DAO tables -->

        <createTable tableName="users">
            <column name="username" type="varchar(50)"><constraints nullable="false" primaryKey="true" /></column>
            <column name="password" type="varchar(200)"><constraints nullable="false" /></column>
            <column name="enabled" type="boolean"><constraints nullable="false" /></column>
        </createTable>

        <createTable tableName="authorities">
            <column name="username" type="varchar(50)"><constraints nullable="false" /></column>
            <column name="authority" type="varchar(50)"><constraints nullable="false" /></column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_authorities_users"
                                 baseTableName="authorities" baseColumnNames="username"
                                 referencedTableName="users" referencedColumnNames="username" />
        <createIndex tableName="authorities" indexName="ix_auth_username" unique="true">
            <column name="username" />
            <column name="authority" />
        </createIndex>

        <!-- spring security remember me table -->

        <createTable tableName="persistent_logins">
            <column name="username" type="varchar(64)"><constraints nullable="false" /></column>
            <column name="series" type="varchar(64)"><constraints primaryKey="true" /></column>
            <column name="token" type="varchar(64)"><constraints nullable="false" /></column>
            <column name="last_used" type="timestamp"><constraints nullable="false" /></column>
        </createTable>

        <!-- buildPhoto tables -->

        <createTable tableName="photos">
            <column name="id" type="bigint" autoIncrement="true"><constraints primaryKey="true" nullable="false"/></column>
            <column name="version" type="bigint" defaultValueNumeric="0"><constraints nullable="false"/></column>
            <column name="name" type="varchar(50)"><constraints nullable="false"/></column>
            <column name="description" type="varchar(2000)"/>
            <column name="camera_info" type="varchar(100)"/>
            <column name="date_uploaded" type="timestamp" defaultValueComputed="now()"><constraints nullable="false"/></column>
            <column name="date_updated" type="timestamp" defaultValueComputed="now()"><constraints nullable="false"/></column>
            <column name="date_taken" type="timestamp"/>
            <column name="latitude" type="double"/>
            <column name="longitude" type="double"/>
        </createTable>
        <createTable tableName="images">
            <column name="photo_id" type="bigint"><constraints nullable="false"/></column>
            <column name="scale" type="varchar(10)"><constraints nullable="false"/></column>
            <column name="width" type="int"><constraints nullable="false"/></column>
            <column name="height" type="int"><constraints nullable="false"/></column>
            <column name="content_length" type="bigint"><constraints nullable="false"/></column>
            <column name="content_type" type="varchar(50)"><constraints nullable="false"/></column>
            <column name="content" type="oid"><constraints nullable="false" /></column>
        </createTable>
        <addUniqueConstraint tableName="images" columnNames="photo_id,scale" constraintName="unique_photo_scale"/>
        <addForeignKeyConstraint constraintName="fk_images_photos"
                                 baseTableName="images" baseColumnNames="photo_id"
                                 referencedTableName="photos" referencedColumnNames="id" />

        <createTable tableName="tags">
            <column name="id" type="bigint" autoIncrement="true"><constraints primaryKey="true" nullable="false"/></column>
            <column name="name" type="varchar(40)"><constraints nullable="false"/></column>
            <column name="group" type="varchar(20)"><constraints nullable="false"/></column>
        </createTable>
        <addUniqueConstraint tableName="tags" columnNames="group,name" constraintName="unique_tag_namespace"/>

        <createTable tableName="photo_tags">
            <column name="photo_id" type="bigint"><constraints nullable="false"/></column>
            <column name="tag_id" type="bigint"><constraints nullable="false"/></column>
        </createTable>
        <!-- FIXME: this should have constraints -->

    </changeSet>

</databaseChangeLog>